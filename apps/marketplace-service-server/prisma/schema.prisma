datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Order {
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  item       Item?    @relation(fields: [itemId], references: [id])
  itemId     String?
  quantity   Int?
  status     String?
  totalPrice Float?
  updatedAt  DateTime @updatedAt
  user       User?    @relation(fields: [userId], references: [id])
  userId     String?
}

model Category {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  updatedAt   DateTime @updatedAt
}

model Item {
  available   Boolean?
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  orders      Order[]
  price       Float?
  title       String?
  updatedAt   DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  orders    Order[]
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
